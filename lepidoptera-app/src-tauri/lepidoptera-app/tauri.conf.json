{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lepidoptera-app",
  "version": "0.1.0",
  "identifier": "lepidoptera",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "lepidoptera-app",
        "width": 800,
        "height": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/windows/32x32.png",
      "icons/macos/128x128.png",
      "icons/windows/256x256.png",
      "icons/macos/ma_icon.icns",
      "icons/windows/icon.ico"
    ]
  }
}
